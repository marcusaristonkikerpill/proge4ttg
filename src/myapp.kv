<MyLayout>:
    orientation: "vertical"
    spacing: 10
    padding: 20

    TextInput:
        id: exercise_input
        hint_text: "Harjurus"

    TextInput:
        id: weight_input
        hint_text: "Raskus (kg)"
        input_filter: "int"

    TextInput:
        id: reps_input
        hint_text: "Reps"
        input_filter: "int"

    Button:
        text: "Lisa harjutus"
        on_press: root.add_lift()

    Button:
        text: "Harjurused"
        on_press: root.get_lifts()

    Label:
        id: output_label
        text: "Tulemused"
