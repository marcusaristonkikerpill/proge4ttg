<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Welcome to Home"

        Button:
            text: "Go to Lifts"
            on_release: app.root.current = "lifts"

        Button:
            text: "Go to Templates"
            on_release: app.root.current = "templates"


<LiftsScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        TextInput:
            id: weight_input
            hint_text: "Weight (kg)"
            input_filter: "int"

        TextInput:
            id: reps_input
            hint_text: "Reps"
            input_filter: "int"
        
        Button:
            background_color: "red"
            text: "Lift"
            on_release: app.root.current = "erinevad_harjutused"

        Button:
            text: "Show Lifts"
            on_release: root.get_lifts()

        Label:
            id: output_label
            text: "Results"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"


<TemplateScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "This is the Template Screen"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"

<ErinevadHarjutusedScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Vali harjutus, mida lisada"

        Button:
            text: "Squat"
            on_release: root.lisa_harjutus("Squat"); app.root.current = "lifts"

        Button:
            text: "Deadlift"
            on_release: root.lisa_harjutus("Deadlift"); app.root.current = "lifts"

        Button:
            text: "Bench Press"
            on_release: root.lisa_harjutus("Bench Press"); app.root.current = "lifts"

        Button:
            text: "Tagasi avalehele"
            on_release: app.root.current = "home"
