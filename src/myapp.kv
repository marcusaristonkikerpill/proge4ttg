<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Welcome to Home"

        Button:
            text: "Go to Lifts"
            on_release: app.root.current = "lifts"

        Button:
            text: "Go to Templates"
            on_release: app.root.current = "templates"


<LiftsScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        TextInput:
            id: exercise_input
            hint_text: "Exercise"

        TextInput:
            id: weight_input
            hint_text: "Weight (kg)"
            input_filter: "int"

        TextInput:
            id: reps_input
            hint_text: "Reps"
            input_filter: "int"

        Button:
            text: "Add Lift"
            on_release: root.add_lift()

        Button:
            text: "Show Lifts"
            on_release: root.get_lifts()

        Label:
            id: output_label
            text: "Results"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"


<TemplateScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "This is the Template Screen"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"
