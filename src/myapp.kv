<HomeScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle: 
                pos: self.pos
                size: self.size
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Welcome to Home"
            color: "black"
            font_size: 50
            font_name: "CustomFont"

        Button:
            text: "Go to Lifts"
            on_release: app.root.current = "lifts"
            font_name: "CustomFont"
            font_size: 40
            background_color: 1, .3, .4, .85
            on_press: self.background_color = (1.0 ,0.0, 0.0, 1.0)
            on_release: self.background_color = (1, .3, .4, .85)

        Button:
            text: "Go to Templates"
            on_release: app.root.current = "templates"
            font_name: "CustomFont"
            font_size: 40
            background_color: 1, .3, .4, .85
            on_press: self.background_color = (1.0 ,0.0, 0.0, 1.0)
            on_release: self.background_color = (1, .3, .4, .85)

<LiftsScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: f"Current Exercise: {root.current_exercise}"
            color: "black"
            font_name: "CustomFont"
            font_size: 20

        TextInput:
            id: weight_input
            hint_text: "Weight (kg)"
            input_filter: "int"

        TextInput:
            id: reps_input
            hint_text: "Reps"
            input_filter: "int"
        
        Button:
            background_color: 1, .3, .4, .85
            on_press: self.background_color = (1.0 ,0.0, 0.0, 1.0)
            on_release: self.background_color = (1, .3, .4, .85)
            text: "Add Lift"
            on_release: root.add_lift()
            font_name: "CustomFont"

        Button:
            text: "Change Exercise"
            on_release: app.root.current = "erinevad_harjutused"
            font_name: "CustomFont"

        Label:
            id: clock_label
            text: "00:00:00"
            color: "black"
            font_name: "CustomFont"
            font_size: 20

        Label:
            text: f"Lifts in this workout: {len(root.current_workout_lifts)}"
            color: "black"
            font_name: "CustomFont"
            font_size: 16

        Button:
            text: "Show Workout History"
            on_release: app.root.current = "show"
            font_name: "CustomFont"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"
            font_name: "CustomFont"

        Button:
            text: "Finish workout"
            on_release: root.finish_workout()
            font_name: "CustomFont"
            background_color: 0, 1, 0, 0.8

<TemplateScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "This is the Template Screen"
            font_name: "CustomFont"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"
            font_name: "CustomFont"

<ErinevadHarjutusedScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Pick an exercise"
            font_name: "CustomFont"
            font_size: 24

        Button:
            text: "Squat"
            on_release: root.lisa_harjutus("Squat"); app.root.current = "lifts"
            font_name: "CustomFont"

        Button:
            text: "Deadlift"
            on_release: root.lisa_harjutus("Deadlift"); app.root.current = "lifts"
            font_name: "CustomFont"

        Button:
            text: "Bench Press"
            on_release: root.lisa_harjutus("Bench Press"); app.root.current = "lifts"
            font_name: "CustomFont"

        Button:
            text: "Back home"
            on_release: app.root.current = "home"
            font_name: "CustomFont"

<EndScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        padding: 20
        spacing: 10
        
        Label:
            id: duration_label
            text: "Workout lasted"
            color: "black"
            font_name: "CustomFont"
            font_size: 30

        Label:
            text: "Best lifts"
            color: "black"
            font_name: "CustomFont"
            font_size: 30
        
        Label:
            id: max_lifts_label
            text: "Heaviest lifts"
            color: "black"
            font_name: "CustomFont"
            font_size: 20
        
        Button:
            text: "Back home"
            on_release: app.root.current = "home"
            font_name: "CustomFont"
            background_color: 1, .3, .4, .85

<ShowLiftsScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Workout History"
            color: "black"
            font_name: "CustomFont"
            font_size: 30

        ScrollView:
            Label:
                id: max_lifts_label
                text: "Loading workouts..."
                color: "black"
                font_name: "CustomFont"
                font_size: 16
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

        Button:
            text: "Back to lifts"
            on_release: app.root.current = "lifts"
            font_name: "CustomFont"
            background_color: 1, .3, .4, .85