<MyLayout>:
    orientation: "vertical"
    spacing: 10
    padding: 20

    TextInput:
        id: exercise_input
        hint_text: "Harjutus"

    TextInput:
        id: weight_input
        hint_text: "Raskus (kg)"
        input_filter: "int"

    TextInput:
        id: reps_input
        hint_text: "Reps"
        input_filter: "int"

    Button:
        text: "Lisa harjutus"
        on_press: root.add_lift()
        font_size: 30
        color: (1, 1, 1, 1)
        background_color: (0, 0, 1, 1)
        font_name: "calibri"
        size_hint: 0.6, 0.6
        pos_hint: {"x":.2, "top":1}
        border: 30,30,30,30


    Button:
        text: "Harjurused"
        on_press: root.get_lifts()
        background_color: (0, 0, 1, 1)
        font_name: "calibri"
        font_size: 30
        size_hint: 0.6, 0.6
        pos_hint: {"x":.2, "top":1}
        border: 30,30,30,30

    Label:
        id: output_label
        text: "Tulemused"
